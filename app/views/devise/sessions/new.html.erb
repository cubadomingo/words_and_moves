<div class="container authentication-container">
  <div class="col-md-12 login-background">
    <div class="col-md-6 sign-up">
      <p class="text-left">SIGN UP</P>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

        <%= f.email_field :email, autofocus: true, placeholder: "email", class: "form-control bottom-margin-form" %>

        <%= f.text_field :username, placeholder: "choose a username", class: "form-control bottom-margin-form" %>

        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password, placeholder: "password", autocomplete: "off", class: "form-control bottom-margin-form" %>

        <%= f.password_field :password_confirmation, placeholder: "verify password", autocomplete: "off", class: "form-control bottom-margin-form" %>

        <div class="g-recaptcha bottom-margin-form" data-sitekey="6Lc-jCYTAAAAAJTQplm5JfwBdy_Zymmg_URJJtW3"></div>


        <div class="actions text-center">
          <%= f.submit "Sign up", class: "btn btn-primary pink-button-100" %>
        </div>
      <% end %>
    </div>
    <div class="col-md-6 sign-in">
      <p class="text-left">SIGN IN</p>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.email_field :email, placeholder: "email", autofocus: true, class: "form-control bottom-margin-form" %>
          <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <% end -%>
          <%= f.password_field :password, placeholder: "password", autocomplete: "off", class: "form-control bottom-margin-form" %>
          <div class="text-left bottom-margin-form">
            <%= f.check_box :remember_me%>
            <span class="remember-me">remember me</span>
            <span class="forgot-password"><%= link_to "reset password", new_password_path(resource_name)%></span>
          </div>
          <div class="text-center">
            <%= f.submit "Sign in", class: "btn bottom-margin-form btn-primary pink-button-100" %>
          </div>
          <p class="text-center bottom-margin-form">OR</p>
          <%- if devise_mapping.omniauthable? %>
          <div class="text-center">
            <%- resource_class.omniauth_providers.each do |provider| %>
              <%= link_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class: "btn btn-primary pink-button-100 bottom-margin-form" %>
              <%= link_to "Sign in with Google", "#", class: "btn btn-primary pink-button-100" %>

            <% end -%>
          </div>
          <% end -%>
        </div>
      <% end %>
    </div>
  </div>
</div>
